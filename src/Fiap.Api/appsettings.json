{
  "ConnectionStrings": {
    "Redis": "ec2-54-207-227-213.sa-east-1.compute.amazonaws.com:6379",
    "EventStore": "esdb://ec2-54-207-227-213.sa-east-1.compute.amazonaws.com:2113?tls=false",
    "Elasticsearch": "http://ec2-54-207-227-213.sa-east-1.compute.amazonaws.com:9200"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "HybridCache": {
    "DefaultExpirationTime": "00:10:00"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://ec2-54-207-227-213.sa-east-1.compute.amazonaws.com:3100",
          "labels": [
            {
              "key": "app",
              "value": "dotnet-api"
            },
            {
              "key": "env",
              "value": "docker"
            }
          ],
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "DistributedTracing": {
    "Jaeger": {
      "ServiceName": "Fiap",
      "Host": "jaeger",
      "Port": 6831,
      "Endpoint": "http://ec2-54-207-227-213.sa-east-1.compute.amazonaws.com:14268/api/traces"
    }
  },
  "ServiceBus": {
    "Region": "sa-east-1",
    "FCGQueueName": "fcg-queue"
  },
  "ExternalServices": {
    "CRMUrl": "https://proxy.bsm.dev.br"
  },
  "MongoDb": {
    "ConnectionString": "mongodb://ec2-54-207-227-213.sa-east-1.compute.amazonaws.com:27017",
    "Database": "FCG"
  }
}
