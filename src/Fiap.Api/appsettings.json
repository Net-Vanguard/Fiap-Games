{
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "EventStore": "esdb://eventstore:2113?tls=false",
    "Elasticsearch": "http://elasticsearch:9200"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "HybridCache": {
    "DefaultExpirationTime": "00:10:00"
  },

  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "key": "app",
              "value": "dotnet-api-games"
            },
            {
              "key": "env",
              "value": "docker"
            }
          ],
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },

  "DistributedTracing": {
    "Jaeger": {
      "ServiceName": "GamesAPI",
      "Host": "jaeger",
      "Port": 6831,
      "Endpoint": "http://jaeger:14268/api/traces"
    }
  },

  "ServiceBus": {
    "Region": "sa-east-1",
    "FCGQueueName": "fcg-queue"
  },

  "ExternalServices": {
    "CRMUrl": "http://crm-api:5000"
  },

  "MongoDb": {
    "ConnectionString": "mongodb://mongodb:27017",
    "Database": "FCG"
  }
}
